<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
<data>
        <variable
            name="viewModel"
            type="com.jessy.publishermidterm.DetailViewModel"/>
</data>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailFragment"
    android:orientation="vertical"
    android:padding="8dp">

    <EditText
        android:id="@+id/detail_ed_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="input title"
        android:text="@{view}"
        android:layout_marginTop="8dp"
        />
    <EditText
        android:id="@+id/detail_ed_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="input category"
        android:layout_marginTop="8dp"
        />
    <EditText
        android:id="@+id/detail_ed_content"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:gravity="left"
        android:layout_marginTop="8dp"
        android:hint="input content"/>
    <EditText
        android:id="@+id/detail_ed_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="input id"
        />
    <Button
        android:id="@+id/detail_bt_publish"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="發佈" />


</LinearLayout>
</layout>